@model List<SyllabusMaker.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">All Courses</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-book-open"></i>
            All Course Details
            <a href="@( Url.Action("Create", "Course") )" class="btn btn-info pull-right fa fa-plus">Add New Course</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th colspan="2"></th>
                            <th colspan="3"></th>

                            <th colspan="5" class="text-center">Marks</th>
                            <th colspan="1"></th>
                        </tr>
                       
                        <tr>

                            <th>Serial No.</th>
                            <th>Course Code</th>
                            <th>Course Title</th>
                            <th>Course Type</th>
                            <th>Credit</th>

                            <th>CT</th>
                            <th>Attendence</th>
                            <th>SEE</th>
                            <th>SE</th>
                            <th>Total Marks</th>
                            <th>Action</th>

                        </tr>


                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                           
                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>

                            <td>@item.CourseCode</td>
                            <td>@item.Title</td>
                            <td>@item.CourseType.Type</td>
                            <td>@item.Credit</td>
                            <td>@item.Mark.CT</td>
                            <td>@item.Mark.Attendence</td>
                            <td>@item.Mark.SEE</td>
                            <td>@item.Mark.SE</td>
                            <td>@item.Mark.Total</td>
                            @*<td><a href="@Url.Content(item.ImageURL)" target="_blank"><img src="@Url.Content(item.ImageURL)" style="width:100px; height:67px;" /></a></td>*@
                            <td>
                                <a href="@Url.Action("Edit", "Course", new { id = item.CourseId})" class="btn btn-info">Edit</a>
                                <a href="@Url.Action("Delete", "Course", new { id = item.CourseId})" class="btn btn-danger">Delete</a>
                            </td>



                        </tr>



                            
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


