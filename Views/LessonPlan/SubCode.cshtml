@model List<SyllabusMaker.Models.Course>

@{
    ViewBag.Title = "SubCode";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@( Url.Action("Index", "Dashboard") )">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Learning Plan</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-book-open"></i>
            Detail Learning Plan
            <a href="@( Url.Action("Create", "LessonPlan") )" class="btn btn-info pull-right fa fa-plus">Add New Plan</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>


                        <tr>

                            <th>Sr. No.</th>
                            <th>Course Code</th>

                            <th>Course Title</th>
                            <th>Learning Plan</th>

                            

                        </tr>


                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {


                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>

                            <td>@item.CourseCode</td>
                            <td>@item.Title</td>
                            
                            
                            <td>
                                <a href="@Url.Action("Index", "LessonPlan", new { id = item.CourseId})" class="btn btn-info">View</a>
                               
                            </td>



                        </tr>




                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
